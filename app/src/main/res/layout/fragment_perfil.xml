<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
    android:background="@drawable/fondo_degradado"
    tools:context=".ui.perfil.PerfilFragment"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText android:background="@drawable/bt_white"
        android:layout_height="54dp"
        android:layout_width="338dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"
        android:textColorHint="@color/secondary_text"
        android:textColor="@color/primary_text"
        android:inputType="textPersonName"
        android:enabled="false"
        android:hint="Dni"
        android:ems="10"
        android:layout_marginTop="84dp"
        android:id="@+id/etDniPerfil"/>

    <EditText android:background="@drawable/bt_white"
        android:layout_height="54dp"
        android:layout_width="338dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"
        android:textColorHint="@color/secondary_text"
        android:textColor="@color/primary_text"
        android:inputType="textPersonName"
        android:enabled="false"
        android:hint="Nombre"
        android:ems="10"
        android:layout_marginTop="28dp"
        android:id="@+id/etNombrePerfil"
        app:layout_constraintTop_toBottomOf="@+id/etDniPerfil"/>


    <EditText android:background="@drawable/bt_white"
        android:layout_height="54dp"
        android:layout_width="338dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"
        android:textColorHint="@color/secondary_text"
        android:textColor="@color/primary_text"
        android:inputType="textPersonName"
        android:enabled="false"
        android:hint="Apellido"
        android:ems="10"
        android:layout_marginTop="28dp"
        android:id="@+id/etApellidoPerfil"
        app:layout_constraintTop_toBottomOf="@+id/etNombrePerfil"/>

    <EditText android:background="@drawable/bt_white"
        android:layout_height="54dp"
        android:layout_width="338dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"
        android:textColorHint="@color/secondary_text"
        android:textColor="@color/primary_text"
        android:inputType="textPersonName"
        android:enabled="false"
        android:hint="Email"
        android:ems="10"
        android:layout_marginTop="28dp"
        android:id="@+id/etEmailPerfil"
        app:layout_constraintTop_toBottomOf="@+id/etApellidoPerfil"/>

    <EditText android:background="@drawable/bt_white"
        android:layout_height="54dp"
        android:layout_width="338dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"
        android:textColorHint="@color/secondary_text"
        android:textColor="@color/primary_text"
        android:inputType="textPersonName"
        android:enabled="false"
        android:hint="Telefono"
        android:ems="10"
        android:layout_marginTop="28dp"
        android:id="@+id/etTelefonoPerfil"
        app:layout_constraintTop_toBottomOf="@+id/etContraseñaPerfil"/>

    <EditText android:background="@drawable/bt_white"
        android:layout_height="53dp"
        android:layout_width="337dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center"
        android:textColorHint="@color/secondary_text"
        android:textColor="@color/primary_text"
        android:inputType="textPassword"
        android:enabled="false"
        android:hint="Contraseña" android:ems="10"
        android:layout_marginTop="28dp"
        android:id="@+id/etContraseñaPerfil"
        app:layout_constraintTop_toBottomOf="@+id/etEmailPerfil"/>

    <Button android:layout_height="59dp"
        android:layout_width="201dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/primary_light"
        android:id="@+id/btEditarPerfil"
        app:layout_constraintTop_toBottomOf="@+id/etTelefonoPerfil"
        app:layout_constraintVertical_bias="0.379"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/primary_text"
        android:text="Editar"/>

</androidx.constraintlayout.widget.ConstraintLayout>